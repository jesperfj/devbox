#!/bin/bash

STACK_NAME=devbox

# Running instances with tag Application=devbox
INSTANCE_ID=$(aws --profile devbox ec2 describe-instances --filters "Name=tag:Application,Values=devbox" "Name=instance-state-code,Values=80" | jq -r '.Reservations[].Instances[].InstanceId')

if (( $(grep -c . <<<"$INSTANCE_ID") > 1 )); then 
  echo "Failed: Multiple instances running:"
  echo "$INSTANCE_ID"
  exit 1
fi

if [ -z $INSTANCE_ID ]; then
  echo "Failed: No stopped instances."
  exit 1
fi

RESULT=$(aws --profile devbox ec2 start-instances --instance-ids $INSTANCE_ID)

echo "Starting $INSTANCE_ID."
